{
  "name": "@percolator/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose --coverage tests/unit",
    "test:integration": "vitest run --reporter=verbose --coverage tests/integration",
    "test:security": "vitest run --reporter=verbose tests/security",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@percolator/core": "workspace:*",
    "@solana/web3.js": "^1.98.0",
    "@supabase/supabase-js": "^2.49.1",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.7",
    "hono": "^4.7.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.14",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
